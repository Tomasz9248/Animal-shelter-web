<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <display-name>filters</display-name>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <!-- Konfiguracja serwlet贸w -->
    <servlet>
        <servlet-name>ListServlet</servlet-name>
        <servlet-class>com.tomek.controller.ListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DogServlet</servlet-name>
        <servlet-class>com.tomek.controller.DogServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.tomek.controller.LoginServlet</servlet-class>
    </servlet>

    <!-- Mapowanie serwlet贸w -->
    <servlet-mapping>
        <servlet-name>ListServlet</servlet-name>
        <url-pattern>/ListServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DogServlet</servlet-name>
        <url-pattern>/DogServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>

     Konfiguracja filtr贸w
    <filter>
        <filter-name>AddAnimalFilter</filter-name>
        <filter-class>com.tomek.filters.AddAnimalFilter</filter-class>
    </filter>

     Mapowanie filtr贸w
    <filter-mapping>
        <filter-name>AddAnimalFilter</filter-name>
        <url-pattern>/addAnimal.jsp</url-pattern>
    </filter-mapping>


</web-app>